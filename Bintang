import turtle

class Star: 
    def __init__ (self, x, y, ukuran):
        self.t = turtle.Turtle()
        self.t.goto(x,y)
        self.ukuran = ukuran

    def gambarBintang(self):
        self.t.color("Red")
        for _ in range(5):
            self.t.forward(self.ukuran)
            self.t.left(-144)

    def move(self, jarak):
        self.t.penup()
        self.t.forward(jarak)
        self.t.pendown()

def gambarPola(jumlah, jarakantarbintang, ukuranBintang):
    bintang1 = Star(-50, 0, ukuranBintang)
    bintang2 = Star(50, 0, ukuranBintang)

    for _ in range(jumlah):
        bintang1.gambarBintang()
        bintang1.move(jarakantarbintang)
        bintang2.gambarBintang()
        bintang2.move(-jarakantarbintang)

gambarPola(5, 50,50)

turtle.done()
